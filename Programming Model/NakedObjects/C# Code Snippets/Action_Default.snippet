<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>Action -  default parameter</Title>
      <Author>Naked Objects Group</Author>
      <Description>Adds a method to specify the default value for a parameter on a corresponding action method.</Description>
      <HelpUrl>www.nakedobjects.net</HelpUrl>
      <SnippetTypes />
      <Keywords />
      <Shortcut>actdef</Shortcut>
    </Header>
    <Snippet>
      <References />
      <Imports />
      <Declarations>
        <Literal Editable="true" xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
          <ID>ActionName</ID>
          <Type></Type>
          <ToolTip>Enter the name for the action to which this method provides the default parameters</ToolTip>
          <Default>ActionName</Default>
          <Function></Function>
        </Literal>
        <Object Editable="true" xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
          <ID>Default Parameter Value</ID>
          <Type></Type>
          <ToolTip></ToolTip>
          <Default>Default Parameter Value</Default>
          <Function></Function>
        </Object>
        <Literal Editable="true" xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
          <ID>ParameterNumber</ID>
          <Type></Type>
          <ToolTip>Specify the parameter number on the corresponding action method (counting from zero)</ToolTip>
          <Default>0</Default>
          <Function></Function>
        </Literal>
        <Literal Editable="true" xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
          <ID>ParameterType</ID>
          <Type />
          <ToolTip></ToolTip>
          <Default>ParameterType</Default>
          <Function />
        </Literal>
      </Declarations>
      <Code Language="CSharp" Kind="method decl" Delimiter="$"><![CDATA[public $ParameterType$ Default$ParameterNumber$$ActionName$()
      {
        return $Default Parameter Value$;
      }
]]></Code>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>